# Configuración local para desarrollo con Supabase
# Copiar este archivo como .env y completar los valores

# Django
SECRET_KEY=django-insecure-local-development-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Supabase PostgreSQL
# Obtener de: Settings → Database → Connection string → URI
# Formato: postgresql://postgres.xxxxx:[PASSWORD]@aws-0-xx.pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Project Info
SUPABASE_URL=https://dppqzgdbkzsvrpqvvorh.supabase.co
SUPABASE_PROJECT_REF=dppqzgdbkzsvrpqvvorh

# Matrix Calculator Settings
MAX_DIMENSION=100
RETENTION_DAYS=30
CONDITION_THRESHOLD=1e12

# Scheduler
RUN_SCHEDULER=false

# CORS (Frontend local)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
