# Variables de entorno para producción en Cloud Run + Supabase
# NO COMMITEAR este archivo - solo como referencia

# Django Configuration
SECRET_KEY=your-super-secret-key-here-generate-with-django-utils
DEBUG=False
ALLOWED_HOSTS=matrixcalc-backend-xxxxxxxxxx-uc.a.run.app,*

# Database - Supabase PostgreSQL
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.xxxxxxxxxx.supabase.co:5432/postgres

# Matrix Calculator Settings
MAX_DIMENSION=100
RETENTION_DAYS=30
CONDITION_THRESHOLD=1e12

# Scheduler (desactivar en Cloud Run para evitar múltiples instancias)
RUN_SCHEDULER=false

# CORS (incluir URL del frontend de Cloud Run)
CORS_ALLOWED_ORIGINS=https://matrixcalc-frontend-xxxxxxxxxx-uc.a.run.app

# Cloud Run
PORT=8080
